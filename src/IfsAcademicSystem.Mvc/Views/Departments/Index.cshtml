@model IEnumerable<IfsAcademicSystem.Mvc.Models.Department>

@{
    ViewData["Title"] = "Departamentos";
}

<div class="card shadow-sm mt-4">
    <div class="card-header ifs-primary-bg-mvc text-white d-flex justify-content-between align-items-center">
        <h4 class="my-1 ifs-highlight-color-mvc">@ViewData["Title"]</h4>
        <a asp-action="Create" class="btn btn-sm btn-light">
            <i class="fas fa-plus-circle me-1"></i> Criar Novo Departamento
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered mb-0 align-middle">
                <thead class="thead-light text-center">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th class="text-end">
                            @Html.DisplayNameFor(model => model.Budget)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StartDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Administrator)
                        </th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td class="text-end">
                                @Html.DisplayFor(modelItem => item.Budget)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @(item.Administrator?.FullName ?? "N/A")
                            </td>
                            <td class="text-center action-buttons">
                                <a asp-action="Edit" asp-route-id="@item.DepartmentID" class="btn btn-sm ifs-btn-outline-primary-mvc me-1" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.DepartmentID" class="btn btn-sm btn-outline-secondary me-1" title="Detalhes">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.DepartmentID" class="btn btn-sm btn-outline-danger" title="Excluir">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>