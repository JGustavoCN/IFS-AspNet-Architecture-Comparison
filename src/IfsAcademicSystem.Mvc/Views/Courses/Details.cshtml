@model IfsAcademicSystem.Mvc.Models.Course

@{
    ViewData["Title"] = "Detalhes do Curso";
}

<div class="card shadow-sm mt-4">
    <div class="card-header ifs-primary-bg-mvc text-white">
        <h4 class="my-1 ifs-text-highlight-on-primary-mvc">@ViewData["Title"]: @Model.Title</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 col-lg-2 fw-bold">
                @Html.DisplayNameFor(model => model.CourseID)
            </dt>
            <dd class="col-sm-9 col-lg-10 mb-2">
                @Html.DisplayFor(model => model.CourseID)
            </dd>

            <dt class="col-sm-3 col-lg-2 fw-bold">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-9 col-lg-10 mb-2">
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt class="col-sm-3 col-lg-2 fw-bold">
                @Html.DisplayNameFor(model => model.Credits)
            </dt>
            <dd class="col-sm-9 col-lg-10 mb-2">
                @Html.DisplayFor(model => model.Credits)
            </dd>

            <dt class="col-sm-3 col-lg-2 fw-bold">
                @Html.DisplayNameFor(model => model.Department)
            </dt>
            <dd class="col-sm-9 col-lg-10 mb-2">
                @Html.DisplayFor(model => model.Department.Name)
            </dd>
        </dl>
    </div>
    <div class="card-footer bg-light text-end">
        <a asp-action="Edit" asp-route-id="@Model?.CourseID" class="btn ifs-btn-primary-mvc me-2">
            <i class="fas fa-edit me-1"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Voltar à Lista
        </a>
    </div>
</div>