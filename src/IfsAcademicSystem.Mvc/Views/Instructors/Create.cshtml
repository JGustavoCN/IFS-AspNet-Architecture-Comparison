@model IfsAcademicSystem.Mvc.Models.Instructor

@{
    ViewData["Title"] = "Criar Novo Instrutor";
}

<div class="card shadow-sm mt-4 col-md-10 col-lg-8 mx-auto">
    <div class="card-header ifs-primary-bg-mvc text-white">
        <h4 class="my-1 ifs-text-highlight-on-primary-mvc">@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row mb-3">
                <div class="col-md-6 form-group">
                    <label asp-for="LastName" class="control-label fw-bold"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="FirstMidName" class="control-label fw-bold"></label>
                    <input asp-for="FirstMidName" class="form-control" />
                    <span asp-validation-for="FirstMidName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6 form-group">
                    <label asp-for="HireDate" class="control-label fw-bold"></label>
                    <input asp-for="HireDate" class="form-control" type="date" />
                    <span asp-validation-for="HireDate" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="OfficeAssignment.Location" class="control-label fw-bold"></label>
                    <input asp-for="OfficeAssignment.Location" class="form-control" />
                    <span asp-validation-for="OfficeAssignment.Location" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="control-label fw-bold">Cursos</label>
                <div class="border rounded p-3 bg-light">
                    <div class="row">
                        @{
                            List<IfsAcademicSystem.Mvc.Models.SchoolViewModels.AssignedCourseData> courses = ViewBag.Courses;
                            foreach (var course in courses)
                            {
                                <div class="col-md-4 form-check mb-2">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           name="selectedCourses"
                                           value="@course.CourseID"
                                           id="course_@course.CourseID"
                                           @(Html.Raw(course.Assigned ? "checked=\"checked\"" : "")) />
                                    <label class="form-check-label" for="course_@course.CourseID">
                                        @course.CourseID - @course.Title
                                    </label>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

            <div class="card-footer bg-light text-end mt-4 border-top pt-3">
                <button type="submit" class="btn ifs-btn-primary-mvc me-2">
                    <i class="fas fa-save me-1"></i> Salvar
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Voltar à Lista
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}