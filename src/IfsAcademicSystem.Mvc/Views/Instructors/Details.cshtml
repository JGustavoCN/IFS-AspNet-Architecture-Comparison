@model IfsAcademicSystem.Mvc.Models.Instructor

@{
    ViewData["Title"] = "Detalhes do Instrutor";
}

<div class="card shadow-sm mt-4">
    <div class="card-header ifs-primary-bg-mvc text-white">
        <h4 class="my-1 ifs-text-highlight-on-primary-mvc">@ViewData["Title"]: @Model.FullName</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 col-lg-2 fw-bold">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col-sm-9 col-lg-10 mb-2">
                @Html.DisplayFor(model => model.LastName)
            </dd>

            <dt class="col-sm-3 col-lg-2 fw-bold">
                @Html.DisplayNameFor(model => model.FirstMidName)
            </dt>
            <dd class="col-sm-9 col-lg-10 mb-2">
                @Html.DisplayFor(model => model.FirstMidName)
            </dd>

            <dt class="col-sm-3 col-lg-2 fw-bold">
                @Html.DisplayNameFor(model => model.HireDate)
            </dt>
            <dd class="col-sm-9 col-lg-10 mb-3">
                @Html.DisplayFor(model => model.HireDate)
            </dd>

            @if (Model.OfficeAssignment != null)
            {
                <dt class="col-sm-3 col-lg-2 fw-bold border-top pt-3">
                    Escritório
                </dt>
                <dd class="col-sm-9 col-lg-10 border-top pt-3 mb-3">
                    @Model.OfficeAssignment.Location
                </dd>
            }

            <dt class="col-sm-12 fw-bold border-top pt-3">
                Cursos Ministrados
            </dt>
            <dd class="col-sm-12 mt-2">
                @if (Model.Courses != null && Model.Courses.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var item in Model.Courses)
                        {
                            <li class="list-group-item">@item.CourseID - @item.Title</li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">Nenhum curso associado.</p>
                }
            </dd>
        </dl>
    </div>
    <div class="card-footer bg-light text-end">
        <a asp-action="Edit" asp-route-id="@Model?.ID" class="btn ifs-btn-primary-mvc me-2">
            <i class="fas fa-edit me-1"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Voltar à Lista
        </a>
    </div>
</div>