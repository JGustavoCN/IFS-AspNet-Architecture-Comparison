@model IfsAcademicSystem.Mvc.Models.SchoolViewModels.InstructorIndexData

@{
    ViewData["Title"] = "Instrutores";
    var instructorId = (int?)ViewData["InstructorID"];
    var courseId = (int?)ViewData["CourseID"];
}

<div class="card shadow-sm mt-4">
    <div class="card-header ifs-primary-bg-mvc text-white d-flex justify-content-between align-items-center">
        <h4 class="my-1 ifs-highlight-color-mvc">@ViewData["Title"]</h4>
        <a asp-action="Create" class="btn btn-sm btn-light">
            <i class="fas fa-plus-circle me-1"></i> Criar Novo Instrutor
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-bordered mb-0 align-middle">
                <thead class="thead-light text-center">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Instructors.FirstOrDefault().LastName)</th>
                        <th>@Html.DisplayNameFor(model => model.Instructors.FirstOrDefault().FirstMidName)</th>
                        <th>@Html.DisplayNameFor(model => model.Instructors.FirstOrDefault().HireDate)</th>
                        <th>@Html.DisplayNameFor(model => model.Instructors.FirstOrDefault().OfficeAssignment)</th>
                        <th>@Html.DisplayNameFor(model => model.Instructors.FirstOrDefault().Courses)</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Instructors)
                    {
                        string selectedRow = (item.ID == instructorId) ? "table-primary ifs-selected-row" : "";
                        <tr class="@selectedRow">
                            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                            <td>@Html.DisplayFor(modelItem => item.FirstMidName)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.HireDate)</td>
                            <td class="text-center">
                                @(item.OfficeAssignment?.Location ?? "N/A")
                            </td>
                            <td>
                                @if (item.Courses != null && item.Courses.Any())
                                {
                                    foreach (var course in item.Courses)
                                    {
                                        <span class="badge bg-light text-dark border me-1 mb-1">@course.CourseID - @course.Title</span>
                                    }
                                }
                                else
                                {
                                    <small class="text-muted">Nenhum</small>
                                }
                            </td>
                            <td class="text-center action-buttons">
                                <a asp-action="Index" asp-route-id="@item.ID" class="btn btn-sm ifs-btn-primary-mvc me-1" title="Selecionar Instrutor">
                                    <i class="fas fa-check-circle"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm ifs-btn-outline-primary-mvc me-1" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-secondary me-1" title="Detalhes">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-outline-danger" title="Excluir">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6 mb-4 mb-md-0">
        @if (Model.Courses != null)
        {
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light text-dark d-flex align-items-center">
                    <i class="fas fa-chalkboard-teacher me-2 text-primary"></i>
                    <h5 class="my-1 flex-grow-1">Cursos Ministrados</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-sm table-striped table-hover table-bordered mb-0 align-middle">
                            <thead class="thead-light text-center">
                                <tr>
                                    <th>Selecionar</th>
                                    <th>Código</th>
                                    <th>Título</th>
                                    <th>Departamento</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Courses)
                                {
                                    string selectedRow = (item.CourseID == courseId) ? "table-primary ifs-selected-row" : "";
                                    <tr class="@selectedRow">
                                        <td class="text-center">
                                            <a asp-action="Index" asp-route-courseID="@item.CourseID" asp-route-id="@instructorId" class="btn btn-sm ifs-btn-primary-mvc" title="Ver Alunos Matriculados">
                                                <i class="fas fa-users"></i>
                                            </a>
                                        </td>
                                        <td class="text-center">@item.CourseID</td>
                                        <td>@item.Title</td>
                                        <td>@item.Department.Name</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else if (instructorId != null)
        {
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light text-dark d-flex align-items-center">
                    <i class="fas fa-chalkboard-teacher me-2 text-primary"></i>
                    <h5 class="my-1 flex-grow-1">Cursos Ministrados</h5>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <p class="text-muted mb-0">Selecione um instrutor para ver seus cursos.</p>
                </div>
            </div>
        }
    </div>

    <div class="col-md-6">
        @if (Model.Enrollments != null)
        {
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light text-dark d-flex align-items-center">
                    <i class="fas fa-user-graduate me-2 text-primary"></i>
                    <h5 class="my-1 flex-grow-1">Alunos Matriculados</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-sm table-striped table-hover table-bordered mb-0 align-middle">
                            <thead class="thead-light">
                                <tr>
                                    <th class="text-center">Nome do Aluno</th>
                                    <th class="text-center">Nota</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Enrollments)
                                {
                                    <tr>
                                        <td class="text-center">@item.Student.FullName</td>
                                        <td class="text-center">@(item.Grade.HasValue? Html.DisplayFor(modelItem => item.Grade) : "N/A")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else if (instructorId != null && courseId != null)
        {
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light text-dark d-flex align-items-center">
                    <i class="fas fa-user-graduate me-2 text-primary"></i>
                    <h5 class="my-1 flex-grow-1">Alunos Matriculados</h5>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <p class="text-muted mb-0">Nenhum aluno matriculado neste curso.</p>
                </div>
            </div>
        }
        else if (instructorId != null)
        {
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light text-dark d-flex align-items-center">
                    <i class="fas fa-user-graduate me-2 text-primary"></i>
                    <h5 class="my-1 flex-grow-1">Alunos Matriculados</h5>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <p class="text-muted mb-0">Selecione um curso para ver os alunos.</p>
                </div>
            </div>
        }
    </div>
</div>