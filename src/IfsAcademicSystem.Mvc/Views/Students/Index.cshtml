@model PaginatedList<IfsAcademicSystem.Mvc.Models.Student>

@{
    ViewData["Title"] = "Estudantes";
    var currentSort = ViewData["CurrentSort"] as string;
    var currentFilter = ViewData["CurrentFilter"] as string;
}

<div class="card shadow-sm mt-4">
    <div class="card-header ifs-primary-bg-mvc text-white d-flex justify-content-between align-items-center">
        <h4 class="my-1 ifs-text-highlight-on-primary-mvc">@ViewData["Title"]</h4>
        <a asp-action="Create" class="btn btn-sm btn-light">
            <i class="fas fa-plus-circle me-1"></i> Criar Novo
        </a>
    </div>
    <div class="card-body">
        <form asp-action="Index" method="get" class="mb-3">
            <div class="input-group">
                <input type="text" name="SearchString" value="@currentFilter" class="form-control" placeholder="Procurar por nome ou sobrenome..." aria-label="Filtro de estudante">
                <button type="submit" class="btn ifs-btn-primary-mvc">
                    <i class="fas fa-search me-1"></i> Procurar
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    Limpar
                </a>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead class="thead-light align-middle">
                    <tr>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@currentFilter" class="text-decoration-none text-dark fw-bold">
                                @Html.DisplayNameFor(model => model.FirstOrDefault().LastName)
                                @if (currentSort == "LastName")
                                {
                                    <i class="fas fa-sort-up"></i>
                                }
                                @if (currentSort == "LastName_desc")
                                {
                                    <i class="fas fa-sort-down"></i>
                                }
                            </a>
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().FirstMidName)
                        </th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-route-currentFilter="@currentFilter" class="text-decoration-none text-dark fw-bold">
                                @Html.DisplayNameFor(model => model.FirstOrDefault().EnrollmentDate)
                                @if (currentSort == "EnrollmentDate")
                                {
                                    <i class="fas fa-sort-up"></i>
                                }
                                @if (currentSort == "EnrollmentDate_desc")
                                {
                                    <i class="fas fa-sort-down"></i>
                                }
                            </a>
                        </th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstMidName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EnrollmentDate)
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm ifs-btn-outline-primary-mvc me-1" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-secondary me-1" title="Detalhes">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-outline-danger" title="Excluir">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer bg-light">
        @{
            var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
            var nextDisabled = !Model.HasNextPage ? "disabled" : "";
        }

        <nav aria-label="Paginação de estudantes">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    Página @Model.PageIndex de @Model.TotalPages
                </small>

                <div>
                    <a asp-action="Index"
                       asp-route-sortOrder="@currentSort"
                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                       asp-route-currentFilter="@currentFilter"
                       class="btn btn-sm ifs-btn-outline-primary-mvc @prevDisabled">
                        <i class="fas fa-chevron-left"></i> Anterior
                    </a>
                    <a asp-action="Index"
                       asp-route-sortOrder="@currentSort"
                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                       asp-route-currentFilter="@currentFilter"
                       class="btn btn-sm ifs-btn-outline-primary-mvc @nextDisabled">
                        Próximo <i class="fas fa-chevron-right"></i>
                    </a>
                </div>
            </div>
        </nav>
    </div>
</div>