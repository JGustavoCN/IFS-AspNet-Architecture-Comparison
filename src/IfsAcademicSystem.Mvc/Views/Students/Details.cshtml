@model IfsAcademicSystem.Mvc.Models.Student

@{
    ViewData["Title"] = "Detalhes do Estudante";
}

<div class="card shadow-sm mt-4">
    <div class="card-header ifs-primary-bg-mvc text-white">
        <h4 class="my-1 ifs-text-highlight-on-primary-mvc">@ViewData["Title"]: @Model.FullName</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 col-lg-2 fw-bold">
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd class="col-sm-9 col-lg-10 mb-2">
                @Html.DisplayFor(model => model.LastName)
            </dd>

            <dt class="col-sm-3 col-lg-2 fw-bold">
                @Html.DisplayNameFor(model => model.FirstMidName)
            </dt>
            <dd class="col-sm-9 col-lg-10 mb-2">
                @Html.DisplayFor(model => model.FirstMidName)
            </dd>

            <dt class="col-sm-3 col-lg-2 fw-bold">
                @Html.DisplayNameFor(model => model.EnrollmentDate)
            </dt>
            <dd class="col-sm-9 col-lg-10 mb-3">
                @Html.DisplayFor(model => model.EnrollmentDate)
            </dd>

            <dt class="col-sm-12 fw-bold pt-3 border-top">
                @Html.DisplayNameFor(model => model.Enrollments)
            </dt>
            <dd class="col-sm-12 mt-2">
                @if (Model.Enrollments != null && Model.Enrollments.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm table-striped table-hover table-bordered mb-0">
                            <thead class="thead-light text-center">
                                <tr>
                                    <th>Curso</th>
                                    <th>Nota</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Enrollments)
                                {
                                    <tr class="text-center">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Course.Title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Grade)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">Nenhuma matrícula encontrada.</p>
                }
            </dd>
        </dl>
    </div>
    <div class="card-footer bg-light text-end">
        <a asp-action="Edit" asp-route-id="@Model?.ID" class="btn ifs-btn-primary-mvc me-2">
            <i class="fas fa-edit me-1"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Voltar à Lista
        </a>
    </div>
</div>