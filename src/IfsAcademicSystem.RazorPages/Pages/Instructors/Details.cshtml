@page
@model IfsAcademicSystem.RazorPages.Pages.Instructors.DetailsModel

@{
    ViewData["Title"] = "Detalhes do Instrutor";
}

<div class="card shadow-sm mt-4 col-md-8 col-lg-6 mx-auto">
    <div class="card-header ifs-primary-bg-rp text-white">
        <h4 class="my-1 text-white">@ViewData["Title"]: @Model.Instructor.FullName</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Instructor.LastName)
            </dt>
            <dd class="col-sm-9 mb-2">
                @Html.DisplayFor(model => model.Instructor.LastName)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Instructor.FirstMidName)
            </dt>
            <dd class="col-sm-9 mb-2">
                @Html.DisplayFor(model => model.Instructor.FirstMidName)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Instructor.HireDate)
            </dt>
            <dd class="col-sm-9 mb-2">
                @Html.DisplayFor(model => model.Instructor.HireDate)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Instructor.OfficeAssignment)
            </dt>
            <dd class="col-sm-9 mb-2">
                @Html.DisplayFor(model => model.Instructor.OfficeAssignment.Location)
            </dd>

            <dt class="col-sm-3 fw-bold">
                Cursos
            </dt>
            <dd class="col-sm-9 mb-2">
                @if (Model.Instructor.Courses != null)
                {
                    @foreach (var course in Model.Instructor.Courses)
                    {
                        @course.CourseID @:&nbsp; @course.Title <br />
                    }
                }
            </dd>
        </dl>
    </div>
    <div class="card-footer bg-light text-end">
        <a asp-page="./Edit" asp-route-id="@Model.Instructor.ID" class="btn ifs-btn-primary-rp me-2">
            <i class="fas fa-edit me-1"></i> Editar
        </a>
        <a asp-page="./Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Voltar à Lista
        </a>
    </div>
</div>