@page
@model IfsAcademicSystem.RazorPages.Pages.Instructors.CreateModel

@{
    ViewData["Title"] = "Novo Instrutor";
}

<div class="card shadow-sm mt-4 col-md-8 col-lg-6 mx-auto">
    <div class="card-header ifs-primary-bg-rp text-white">
        <h4 class="my-1 text-white">@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Instructor.LastName" class="control-label fw-bold"></label>
                <input asp-for="Instructor.LastName" class="form-control" />
                <span asp-validation-for="Instructor.LastName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Instructor.FirstMidName" class="control-label fw-bold"></label>
                <input asp-for="Instructor.FirstMidName" class="form-control" />
                <span asp-validation-for="Instructor.FirstMidName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Instructor.HireDate" class="control-label fw-bold"></label>
                <input asp-for="Instructor.HireDate" class="form-control" />
                <span asp-validation-for="Instructor.HireDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Instructor.OfficeAssignment.Location" class="control-label fw-bold"></label>
                <input asp-for="Instructor.OfficeAssignment.Location" class="form-control" />
                <span asp-validation-for="Instructor.OfficeAssignment.Location" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <div class="card">
                    <div class="card-header">
                        <label class="control-label fw-bold">Cursos</label>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm table-borderless">
                                <tr>
                                    @{
                                        int cnt = 0;
                                        foreach (var course in Model.AssignedCourseDataList)
                                        {
                                            if (cnt++ % 3 == 0)
                                            {
                                                @:</tr><tr>
                                            }
                                            @:<td>
                                                <input type="checkbox"
                                                       name="selectedCourses"
                                                       value="@course.CourseID"
                                                       @(Html.Raw(course.Assigned ? "checked=\"checked\"" : "")) />
                                                @course.CourseID @:&nbsp; @course.Title
                                            @:</td>
                                        }
                                        @:</tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            <div class="card-footer bg-light text-end mt-4">
                <button type="submit" class="btn ifs-btn-primary-rp me-2">
                    <i class="fas fa-save me-1"></i> Criar
                </button>
                <a asp-page="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Voltar à Lista
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}