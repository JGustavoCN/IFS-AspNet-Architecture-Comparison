@page
@model IfsAcademicSystem.RazorPages.Pages.Departments.DetailsModel

@{
    ViewData["Title"] = "Detalhes do Departamento";
}

<div class="card shadow-sm mt-4 col-md-8 col-lg-6 mx-auto">
    <div class="card-header ifs-primary-bg-rp text-white">
        <h4 class="my-1 text-white">@ViewData["Title"]: @Model.Department.Name</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Department.Name)
            </dt>
            <dd class="col-sm-9 mb-2">
                @Html.DisplayFor(model => model.Department.Name)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Department.Budget)
            </dt>
            <dd class="col-sm-9 mb-2">
                @Html.DisplayFor(model => model.Department.Budget)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Department.StartDate)
            </dt>
            <dd class="col-sm-9 mb-2">
                @Html.DisplayFor(model => model.Department.StartDate)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Department.Administrator)
            </dt>
            <dd class="col-sm-9 mb-2">
                @Html.DisplayFor(model => model.Department.Administrator.FullName)
            </dd>
        </dl>
    </div>
    <div class="card-footer bg-light text-end">
        <a asp-page="./Edit" asp-route-id="@Model.Department.DepartmentID" class="btn ifs-btn-primary-rp me-2">
            <i class="fas fa-edit me-1"></i> Editar
        </a>
        <a asp-page="./Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Voltar à Lista
        </a>
    </div>
</div>