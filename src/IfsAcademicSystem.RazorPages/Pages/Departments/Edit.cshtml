@page "{id:int}"
@model IfsAcademicSystem.RazorPages.Pages.Departments.EditModel

@{
    ViewData["Title"] = "Editar Departamento";
}

<div class="card shadow-sm mt-4 col-md-8 col-lg-6 mx-auto">
    <div class="card-header ifs-primary-bg-rp text-white">
        <h4 class="my-1 text-white">@ViewData["Title"]: @Model.Department.Name</h4>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Department.DepartmentID" />
            <input type="hidden" asp-for="Department.ConcurrencyToken" />

            <div class="form-group mb-3">
                <label asp-for="Department.Name" class="control-label fw-bold"></label>
                <input asp-for="Department.Name" class="form-control" />
                <span asp-validation-for="Department.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Department.Budget" class="control-label fw-bold"></label>
                <input asp-for="Department.Budget" class="form-control" />
                <span asp-validation-for="Department.Budget" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Department.StartDate" class="control-label fw-bold"></label>
                <input asp-for="Department.StartDate" class="form-control" />
                <span asp-validation-for="Department.StartDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Department.InstructorID" class="control-label fw-bold"></label>
                <select asp-for="Department.InstructorID" class="form-control"
                        asp-items="@Model.InstructorNameSL">
                    <option value="">-- Selecione o Administrador --</option>
                </select>
                <span asp-validation-for="Department.InstructorID" class="text-danger"></span>
            </div>

            <div class="card-footer bg-light text-end mt-4">
                <button type="submit" class="btn ifs-btn-primary-rp me-2">
                    <i class="fas fa-save me-1"></i> Salvar
                </button>
                <a asp-page="./Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Voltar à Lista
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}