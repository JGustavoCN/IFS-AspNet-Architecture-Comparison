@page
@model IfsAcademicSystem.RazorPages.Pages.Courses.UpdateCourseCreditsModel
@{
    ViewData["Title"] = "Atualizar Créditos de Cursos";
}

<div class="card shadow-sm mt-4 col-md-8 col-lg-6 mx-auto">
    <div class="card-header ifs-primary-bg-rp text-white">
        <h4 class="my-1 text-white">@ViewData["Title"]</h4>
    </div>
    <div class="card-body">

        @if (ViewData["RowsAffected"] == null)
        {
            <form method="post">
                <div class="form-group mb-3">
                    <label for="multiplier" class="control-label fw-bold">Multiplicador:</label>
                    <input name="multiplier" type="number" class="form-control" placeholder="Digite um valor (ex: 1.1)" step="any" />
                </div>
                <div class="card-footer bg-light text-end mt-4">
                    <button type="submit" class="btn ifs-btn-primary-rp me-2">
                        <i class="fas fa-sync-alt me-1"></i> Atualizar
                    </button>
                    <a asp-page="./Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Voltar à Lista
                    </a>
                </div>
            </form>
        }
        @if (ViewData["RowsAffected"] != null)
        {
            <div class="alert alert-success" role="alert">
                <h5 class="alert-heading"><i class="fas fa-check-circle me-2"></i>Sucesso!</h5>
                <p class="mb-0">Número de cursos atualizados: <strong>@ViewData["RowsAffected"]</strong></p>
            </div>
            <div class="text-end mt-3">
                <a asp-page="./Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Voltar à Lista
                </a>
            </div>
        }
    </div>
</div>