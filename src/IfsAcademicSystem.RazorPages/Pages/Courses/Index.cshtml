@page
@model IfsAcademicSystem.RazorPages.Pages.Courses.IndexModel
@{
    ViewData["Title"] = "Cursos";
}

<h1>Cursos</h1>

<p>
    <a asp-page="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CoursesVM[0].CourseID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoursesVM[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoursesVM[0].Credits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoursesVM[0].DepartmentName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CoursesVM)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Credits)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.CourseID">Editar</a> |
                    <a asp-page="./Details" asp-route-id="@item.CourseID">Detalhes</a> |
                    <a asp-page="./Delete" asp-route-id="@item.CourseID">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>