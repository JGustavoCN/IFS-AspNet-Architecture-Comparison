@page
@model IfsAcademicSystem.RazorPages.Pages.Courses.DetailsModel

@{
    ViewData["Title"] = "Detalhes do Curso";
}

<div class="card shadow-sm mt-4 col-md-8 col-lg-6 mx-auto">
    <div class="card-header ifs-primary-bg-rp text-white">
        <h4 class="my-1 text-white">@ViewData["Title"]: @Model.Course.Title</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Course.CourseID)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Course.CourseID)
            </dd>
            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Course.Title)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Course.Title)
            </dd>
            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Course.Credits)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Course.Credits)
            </dd>
            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Course.Department)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Course.Department.Name)
            </dd>
        </dl>
    </div>
    <div class="card-footer bg-light text-end">
        <a asp-page="./Edit" asp-route-id="@Model.Course.CourseID" class="btn ifs-btn-primary-rp me-2">
            <i class="fas fa-edit me-1"></i> Editar
        </a>
        <a asp-page="./Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Voltar à Lista
        </a>
    </div>
</div>