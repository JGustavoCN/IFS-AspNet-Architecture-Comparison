@page
@model IfsAcademicSystem.RazorPages.Pages.Courses.CreateModel

@{
    ViewData["Title"] = "Novo Curso";
}

<div class="card shadow-sm mt-4 col-md-8 col-lg-6 mx-auto">
    <div class="card-header ifs-primary-bg-rp text-white">
        <h4 class="my-1 text-white">@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Course.CourseID" class="control-label fw-bold"></label>
                <input asp-for="Course.CourseID" class="form-control" />
                <span asp-validation-for="Course.CourseID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Course.Title" class="control-label fw-bold"></label>
                <input asp-for="Course.Title" class="form-control" />
                <span asp-validation-for="Course.Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Course.Credits" class="control-label fw-bold"></label>
                <input asp-for="Course.Credits" class="form-control" />
                <span asp-validation-for="Course.Credits" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Course.DepartmentID" class="control-label fw-bold"></label>
                <select asp-for="Course.DepartmentID" class="form-control"
                        asp-items="@Model.DepartmentNameSL">
                    <option value="">-- Selecione o Departamento --</option>
                </select>
                <span asp-validation-for="Course.DepartmentID" class="text-danger"></span>
            </div>

            <div class="card-footer bg-light text-end mt-4">
                <button type="submit" class="btn ifs-btn-primary-rp me-2">
                    <i class="fas fa-save me-1"></i> Criar
                </button>
                <a asp-page="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Voltar à Lista
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}