@page
@model IfsAcademicSystem.RazorPages.Pages.Students.DetailsModel

@{
    ViewData["Title"] = "Detalhes do Estudante";
}

<div class="card shadow-sm mt-4 col-md-8 col-lg-6 mx-auto">
    <div class="card-header ifs-primary-bg-rp text-white">
        <h4 class="my-1 text-white">@ViewData["Title"]: @Model.Student.FullName</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Student.LastName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Student.LastName)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Student.FirstMidName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Student.FirstMidName)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Student.EnrollmentDate)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Student.EnrollmentDate)
            </dd>

            <dt class="col-sm-3 fw-bold">
                @Html.DisplayNameFor(model => model.Student.Enrollments)
            </dt>
            <dd class="col-sm-9">
                <table class="table table-striped table-sm mt-2">
                    <thead class="thead-light">
                        <tr>
                            <th>Curso</th>
                            <th>Nota</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Student.Enrollments)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Course.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Grade)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </dd>
        </dl>
    </div>
    <div class="card-footer bg-light text-end">
        <a asp-page="./Edit" asp-route-id="@Model.Student.ID" class="btn ifs-btn-primary-rp me-2">
            <i class="fas fa-edit me-1"></i> Editar
        </a>
        <a asp-page="./Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Voltar à Lista
        </a>
    </div>
</div>