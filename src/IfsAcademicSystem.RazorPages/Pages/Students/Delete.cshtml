@page
@model IfsAcademicSystem.RazorPages.Pages.Students.DeleteModel

@{
    ViewData["Title"] = "Confirmar Exclusão";
}

<div class="card shadow-sm mt-4 col-md-8 col-lg-6 mx-auto">
    <div class="card-header ifs-primary-bg-rp text-white">
        <h4 class="my-1 text-white">@ViewData["Title"]</h4>
    </div>
    <div class="card-body">

        <div class="alert alert-danger" role="alert">
            <h5 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Atenção!</h5>
            <p>Você tem certeza que deseja excluir permanentemente o registro deste estudante?</p>
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <hr>
                <p class="mb-0 text-danger">@Model.ErrorMessage</p>
            }
        </div>

        <h5 class="mt-4 mb-3">Detalhes do Estudante a ser Excluído:</h5>
        <dl class="row">
            <dt class="col-sm-4 col-lg-3 fw-bold">
                @Html.DisplayNameFor(model => model.Student.LastName)
            </dt>
            <dd class="col-sm-8 col-lg-9 mb-2">
                @Html.DisplayFor(model => model.Student.LastName)
            </dd>

            <dt class="col-sm-4 col-lg-3 fw-bold">
                @Html.DisplayNameFor(model => model.Student.FirstMidName)
            </dt>
            <dd class="col-sm-8 col-lg-9 mb-2">
                @Html.DisplayFor(model => model.Student.FirstMidName)
            </dd>

            <dt class="col-sm-4 col-lg-3 fw-bold">
                @Html.DisplayNameFor(model => model.Student.EnrollmentDate)
            </dt>
            <dd class="col-sm-8 col-lg-9 mb-2">
                @Html.DisplayFor(model => model.Student.EnrollmentDate)
            </dd>
        </dl>
    </div>
    <div class="card-footer bg-light text-end">
        <form method="post">
            <input type="hidden" asp-for="Student.ID" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="fas fa-trash me-1"></i> Confirmar Exclusão
            </button>
            <a asp-page="./Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i> Voltar à Lista
            </a>
        </form>
    </div>
</div>